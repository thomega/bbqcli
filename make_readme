#! /bin/sh
# Combine the auto-generated manpages into a
# README.md file for github

cat README.intro

for subcmd in "" temperature alarm monitor pitmaster control; do
  echo "## bbqcli $subcmd"
  echo
  dune exec -- ./bbqcli.exe "$subcmd" --help=groff \
      | sed 's/â€¦//g' \
      | groff -Thtml \
      | sed -e '/Creator/,/<body>/d' -e '/<\/body/d'
  echo
done
